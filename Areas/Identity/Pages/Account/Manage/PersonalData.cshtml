@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dati personali";@* Personal Data *@
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        @* <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p> *@
        <p>Il tuo profilo contiene i dati personali che ci hai fornito. Questa pagina consente di scaricare o di eliminare tali dati.</p>
        <p>
            @* <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong> *@
            <strong>L'eliminazione di questi dati rimuoverà definitivamente il tuo account e questo non può essere recuperato.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">Elimina</a>@* Delete *@
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
