@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticazione a due fattori (2FA)";@* Two-factor authentication (2FA) *@
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            @* <strong>You have no recovery codes left.</strong>
            <p>You must <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a> before you can log in with a recovery code.</p> *@
            <strong>Non hai più codici di recupero</strong>
            <p>Devi <a asp-page="./GenerateRecoveryCodes">generare un nuovo set di codici di recupero</a> prima di poter accedere con un codice di recupero.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            @* <strong>You have 1 recovery code left.</strong>
            <p>You can <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.</p> *@
            <strong>Ti rimane solo 1 codice di recupero.</strong>
            <p>Puoi <a asp-page="./GenerateRecoveryCodes">generare un nuovo set di codici di recupero</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            @* <strong>You have @Model.RecoveryCodesLeft recovery codes left.</strong>
            <p>You should <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.</p> *@
            <strong>Ti sono rimasti @Model.RecoveryCodesLeft codici di recupero.</strong>
            <p>Dovresti <a asp-page="./GenerateRecoveryCodes">generare un nuovo set di codici di recupero</a>.</p>
        </div>
    }

    if (Model.IsMachineRemembered)
    {
        <form method="post" style="display: inline-block">
            <button type="submit" class="btn btn-default">Dimentica questo browser</button>@* Forget this browser *@
        </form>
    }
    <a asp-page="./Disable2fa" class="btn btn-default">Disabilita 2FA</a>@* Disable 2FA *@
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-default">Reimposta i codici di recupero</a>@* Reset recovery codes *@
}

<h5>App di autenticazione</h5>@* Authenticator app *@
@if (!Model.HasAuthenticator)
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">Aggiungi app di autenticazione</a>@* Add authenticator app *@
}
else
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">Configura pp di autenticazione</a>@* Setup authenticator app *@
    <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-default">Reimposta app di autenticazione</a>@* Reset authenticator app *@
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}