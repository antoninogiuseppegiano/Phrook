@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Elimina i dati personali";@* Delete Personal Data *@
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Eliminare le informazioni personali causerà la chiusura del tuo profilo utente e non potrai più accedervi. Il profilo non sarà recuperabile.</strong>@* Deleting this data will permanently remove your account, and this cannot be recovered. *@
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Elimina i dati e chiudi il mio profilo</button>@* Delete data and close my account *@
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}