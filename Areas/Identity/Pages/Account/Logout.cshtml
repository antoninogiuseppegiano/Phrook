@page
@model LogoutModel
@{
    ViewData["Title"] = "Esci";@* Log out *@
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Clicca qui per uscire</button>@* Click here to Logout *@
            </form>
        }
        else
        {
            <p>Ti sei disconnesso con successo dall'applicazione.</p>@* You have successfully logged out of the application. *@
        }
    }
</header>