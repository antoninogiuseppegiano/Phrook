@model ListViewModel<WishlistViewModel> 

<div class="row">
	<div class="col-md-8">
		<h1>@ViewData["Title"]</h1>
	</div>
</div>

@if(Model.TotalCount > 0)
{
	@foreach (WishlistViewModel book in Model.Results)
	{
	<partial name="Wishlist/_BookLine" model="@book"></partial>
	}
}
else
{
	<p class="mt-3">Non hai ancora aggiunto nessun libro alla tua lista dei desideri.</p>
}
