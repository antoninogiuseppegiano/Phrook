@model SearchUserListViewModel
<h1>Risultati della ricerca</h1>

@{
	var usersList = Model.Users;
	var users = usersList.Results;
	string search = Model.SearchUser;
}

@if(usersList.TotalCount > 0) {
	@foreach (SearchedUserViewModel user in users)
	{
		<partial name="Users/_SearchUserLine" model="@user"></partial>
	}
}
else
{
	<p class="mt-3">La ricerca non ha prodotto nessun risultato.</p>
	<p><a asp-controller="Books" asp-action="Index">Torna alla libreria</a></p>
}  