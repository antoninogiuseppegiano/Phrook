{
  "https_port": 443,
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
	"Default": ""
  },

  "Books": {
	  "PerPage": 10,
	  "Order": {
		  "By": "Title",
		  "Ascending": true,
		  "Allow": ["Title", "Rating", "Tag", "ReadingState", "Author"]
	  }
  },

  "Search": {
	  "MaxResults": 100
  }
}
